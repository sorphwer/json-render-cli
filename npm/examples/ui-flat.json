{
  "root": "root",
  "elements": {
    "root": {
      "type": "Container",
      "props": {
        "justify": "center",
        "height": "100%"
      },
      "children": ["card"]
    },
    "card": {
      "type": "Card",
      "props": {
        "width": "100%",
        "background": "#ffffff"
      },
      "children": ["title", "subtitle", "badge", "space", "button"]
    },
    "title": {
      "type": "Heading",
      "props": {
        "text": "json-render CLI",
        "level": 2,
        "size": 42
      }
    },
    "subtitle": {
      "type": "Text",
      "props": {
        "text": "Pass JSON directly with -m, validate with AJV, render with Playwright.",
        "size": 20,
        "color": "#334155"
      }
    },
    "badge": {
      "type": "Badge",
      "props": {
        "text": "READY",
        "background": "#dcfce7",
        "color": "#166534"
      }
    },
    "space": {
      "type": "Spacer",
      "props": {
        "size": 8
      }
    },
    "button": {
      "type": "Button",
      "props": {
        "label": "Generated by json-render"
      }
    }
  }
}
