{
  "root": "root",
  "elements": {
    "root": { "type": "Column", "props": { "align": "flex-start", "gap": 0 }, "children": ["table"] },
    "table": {
      "type": "Column",
      "props": { "gap": 0, "style": { "border": "1px solid #cbd5e1", "background": "#ffffff" } },
      "children": ["headerRow", "dataRow"]
    },
    "headerRow": {
      "type": "Row",
      "props": { "gap": 0, "style": { "background": "#f1f5f9", "borderBottom": "1px solid #cbd5e1" } },
      "children": ["hId", "hPri", "hStat", "hOwner", "hTime", "hTopic"]
    },

    "hId": { "type": "Container", "props": { "width": 92, "padding": "10px 12px", "style": { "borderRight": "1px solid #e2e8f0" } }, "children": ["hIdText"] },
    "hIdText": { "type": "Text", "props": { "text": "ID", "size": 13, "weight": 700, "color": "#334155" } },

    "hPri": { "type": "Container", "props": { "width": 108, "padding": "10px 12px", "style": { "borderRight": "1px solid #e2e8f0" } }, "children": ["hPriText"] },
    "hPriText": { "type": "Text", "props": { "text": "Priority", "size": 13, "weight": 700, "color": "#334155" } },

    "hStat": { "type": "Container", "props": { "width": 94, "padding": "10px 12px", "style": { "borderRight": "1px solid #e2e8f0" } }, "children": ["hStatText"] },
    "hStatText": { "type": "Text", "props": { "text": "Status", "size": 13, "weight": 700, "color": "#334155" } },

    "hOwner": { "type": "Container", "props": { "width": 122, "padding": "10px 12px", "style": { "borderRight": "1px solid #e2e8f0" } }, "children": ["hOwnerText"] },
    "hOwnerText": { "type": "Text", "props": { "text": "Assignee", "size": 13, "weight": 700, "color": "#334155" } },

    "hTime": { "type": "Container", "props": { "width": 132, "padding": "10px 12px", "style": { "borderRight": "1px solid #e2e8f0" } }, "children": ["hTimeText"] },
    "hTimeText": { "type": "Text", "props": { "text": "Updated", "size": 13, "weight": 700, "color": "#334155" } },

    "hTopic": { "type": "Container", "props": { "width": __TOPIC_COL_WIDTH__, "padding": "10px 12px" }, "children": ["hTopicText"] },
    "hTopicText": { "type": "Text", "props": { "text": "Topic", "size": 13, "weight": 700, "color": "#334155" } },

    "dataRow": {
      "type": "Row",
      "props": { "gap": 0, "style": { "background": "#ffffff" } },
      "children": ["cId", "cPri", "cStat", "cOwner", "cTime", "cTopic"]
    },

    "cId": { "type": "Container", "props": { "width": 92, "padding": "12px 12px", "style": { "borderRight": "1px solid #e2e8f0" } }, "children": ["idText"] },
    "idText": { "type": "Text", "props": { "text": "__ID__", "size": 15, "weight": 700, "color": "#0f172a" } },

    "cPri": { "type": "Container", "props": { "width": 108, "padding": "12px 12px", "style": { "borderRight": "1px solid #e2e8f0" } }, "children": ["priBadge"] },
    "priBadge": { "type": "Badge", "props": { "text": "__PRIORITY__", "background": "#fee2e2", "color": "#b91c1c", "padding": "4px 10px", "size": 11, "weight": 700 } },

    "cStat": { "type": "Container", "props": { "width": 94, "padding": "12px 12px", "style": { "borderRight": "1px solid #e2e8f0" } }, "children": ["statBadge"] },
    "statBadge": { "type": "Badge", "props": { "text": "__STATUS__", "background": "#dcfce7", "color": "#166534", "padding": "4px 10px", "size": 11, "weight": 700 } },

    "cOwner": { "type": "Container", "props": { "width": 122, "padding": "12px 12px", "style": { "borderRight": "1px solid #e2e8f0" } }, "children": ["ownerText"] },
    "ownerText": { "type": "Text", "props": { "text": "__ASSIGNEE__", "size": 15, "weight": 600, "color": "#0f172a" } },

    "cTime": { "type": "Container", "props": { "width": 132, "padding": "12px 12px", "style": { "borderRight": "1px solid #e2e8f0" } }, "children": ["timeText"] },
    "timeText": { "type": "Text", "props": { "text": "__UPDATED_AT__", "size": 15, "color": "#334155" } },

    "cTopic": { "type": "Container", "props": { "width": __TOPIC_COL_WIDTH__, "padding": "12px 12px" }, "children": ["topicText"] },
    "topicText": { "type": "Text", "props": { "text": "__TOPIC__", "size": 15, "weight": 500, "color": "#0f172a" } }
  }
}
